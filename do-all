
if [ -d out ] ; then
  echo "out directory exits, exiting." >&2
  exit 1
fi
if [ -d graphdb ] ; then
  echo "graphdb directory exits, exiting." >&2
  exit 1
fi
mkdir out
mkdir graphdb

./tl-dump-neo4j ~/Development/TeX/texlive.git/Master

cd out

cmdline=
for x in node-*.csv ; do
  bn=`basename $x .csv`
  n=`echo $bn | sed -e 's/^node-//'`
  cmdline="$cmdline --nodes:$n $x"
done
for x in edge-*.csv ; do
  bn=`basename $x .csv`
  n=`echo $bn | sed -e 's/^edge-//'`
  cmdline="$cmdline --relationships:$n $x"
done

neo4j-import --into ../graphdb $cmdline


